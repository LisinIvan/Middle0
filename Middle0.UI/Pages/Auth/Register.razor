@page "/auth/register"
@using Middle0.Domain.Common.DTO;

<h3>Регистрация</h3>

@if (!string.IsNullOrEmpty(SuccessMessage))
{
    <div style="color:green">@SuccessMessage</div>
}
@if (!string.IsNullOrEmpty(ErrorMessage))
{
    <div style="color:red">@ErrorMessage</div>
}

<EditForm Model="@Input" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Имя пользователя:</label><br />
        <InputText @bind-Value="Input.Username" />
        <ValidationMessage For="@(() => Input.Username)" />
    </div>

    <div>
        <label>Email:</label><br />
        <InputText @bind-Value="Input.Email" />
        <ValidationMessage For="@(() => Input.Email)" />
    </div>

    <div>
        <label>Пароль:</label><br />
        <InputText @bind-Value="Input.Password" type="password" />
        <ValidationMessage For="@(() => Input.Password)" />
    </div>

    <button type="submit">Зарегистрироваться</button>
</EditForm>

@code {
    [Inject] private HttpClient Http { get; set; }
    [Inject] private ILogger<Register> Logger { get; set; }

    private RegisterDto Input = new();
    private string ErrorMessage;
    private string SuccessMessage;

    private async Task HandleRegister()
    {
        ErrorMessage = "";
        SuccessMessage = "";
        try
        {
            var response = await Http.PostAsJsonAsync("api/Auth/register", Input);

            if (response.IsSuccessStatusCode)
            {
                SuccessMessage = "Пользователь успешно зарегистрирован!";
                Input = new RegisterDto();
            }
            else
            {
                var errors = await response.Content.ReadAsStringAsync();
                Logger.LogWarning("Ошибка регистрации: {Errors}", errors);
                ErrorMessage = $"Ошибка регистрации: {errors}";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Ошибка при попытке регистрации пользователя");
            ErrorMessage = $"Ошибка соединения: {ex.Message}";
        }
    }

    // public class RegisterDto
